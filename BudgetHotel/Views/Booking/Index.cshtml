@model BudgetHotel.Models.GuestBooking

@{
    ViewBag.Title = "Budget Hotel Booking";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="~/Content/custom.css">

<div class="container mt-5">
    <div class="card shadow-lg p-4 booking-card">
        <h2 class="text-center mb-4"><i class="fas fa-hotel text-primary"></i> Hotel Booking Calculator</h2>

        @using (Html.BeginForm("Calculate", "Booking", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            <div class="mb-3">
                <label class="form-label"><i class="fas fa-users"></i> Number of Guests:</label>
                @Html.TextBoxFor(m => m.NumberOfGuests, new { @class = "form-control", type = "number", required = "required", min = "1" })
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="fas fa-moon"></i> Number of Nights:</label>
                @Html.TextBoxFor(m => m.NumberOfNights, new { @class = "form-control", type = "number", required = "required", min = "1" })
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="fas fa-money-bill-wave"></i> Price per Person per Night (R):</label>
                @Html.TextBoxFor(m => m.PricePerPersonPerNight, new { @class = "form-control", type = "number", step = "0.01", required = "required", min = "1" })
            </div>

            <button type="submit" class="btn btn-primary w-100 hover-btn"><i class="fas fa-calculator"></i> Calculate</button>
        }
    </div>
</div>
